{
    "compilerOptions": {
       "target": "ES2020",
       "module": "CommonJS",
       "forceConsistentCasingInFileNames": true, 
       "outDir": "./build",
       "emitDecoratorMetadata": true,
       "experimentalDecorators": true,
       "sourceMap": false,
       "esModuleInterop": true,
       "resolveJsonModule": true,
       "baseUrl": ".",
       "paths": {
           "*": ["node_modules/*"],
           "src/*": ["./src/*"]
       }
    }
 }